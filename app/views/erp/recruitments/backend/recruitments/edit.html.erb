<% content_for :title do %>
    <%= t('.edit') %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_recruitments.backend_recruitments_path %>">
    <i class="fa fa-archive"></i> <%= t('.recruitments') %>
    </a> / <%= t('.edit') %> / <%= @recruitment.name %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_recruitments.new_backend_recruitment_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @recruitment.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <%= render 'form', recruitment: @recruitment %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>