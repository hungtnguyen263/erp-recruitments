<% content_for :title do %>
    <%= t('.recruitments') %>
<% end %>

<% content_for :page_title do %>
    <i class="icon-users"></i> <%= t('.recruitments') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_recruitments.new_backend_recruitment_path
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_recruitments.list_backend_recruitments_path,
    keywords: [
        {
            text: t('.name'), name: 'erp_recruitments_recruitments.name'
        },
        {
            text: t('creator'),
            name: 'erp_users.name',
            select: {
                name: 'erp_users.id',
                data_url: erp.dataselect_backend_users_path
            }
        }
    ],
    actions: [
    ],
    filters: [
        {
            text: t('.active'), name: 'status', value: Erp::Recruitments::Recruitment::STATUS_ACTIVE, checked: true
        },
        {
            text: t('.deleted'), name: 'status', value: Erp::Recruitments::Recruitment::STATUS_DELETED, checked: false
        }
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('.deadline'), name: 'deadline', value: true, checked: true
        },
        {
            text: t('.position'), name: 'position', value: true, checked: true
        },
        {
            text: t('status'), name: 'status', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: false
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: false
        }
    ],
    sort: { sort_by: 'erp_recruitments_recruitments.created_at', sort_direction: 'desc' }
) %>
